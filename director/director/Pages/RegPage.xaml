<Page x:Class="director.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:director.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPage">

    <Grid Background="White">
        <StackPanel>
            <TextBlock Text="Фамилия"/>
            <TextBox x:Name="TBFirstName"/>
            <TextBlock Text="Имя"/>
            <TextBox x:Name="TBSecondName"/>
            <TextBlock Text="Отчество"/>
            <TextBox x:Name="TBPatronymic"/>
            <TextBlock Text="Nickname"/>
            <TextBox x:Name="TBNickname"/>
            <TextBlock Text="Avatar"/>
            <TextBox x:Name="TBAvatar"/>
            <TextBlock Text="Login"/>
            <TextBox x:Name="TBLogin"/>
            <TextBlock Text="Password"/>
            <TextBox x:Name="TBPassword"/>

            <Button  x:Name="BRegister" 
                    Content="Register" 
                    Click="BRegister_Click"/>
        </StackPanel>
    </Grid>
</Page>
